generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userid    Int        @id @default(autoincrement())
  name      String
  lastname  String
  email     String
  appliances Appliances[]
}

model Appliances {
  applianceid Int    @id @default(autoincrement())
  userid      Int
  name        String
  type        String
  wattage     Int
  description String
  user        User   @relation(fields: [userid], references: [userid])
}
